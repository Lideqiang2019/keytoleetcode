class Solution:
    def findLengthOfLCIS(self, nums: List[int]) -> int:
        '''
        如果是递增的，用一个数记录下长度
        遇到不是递增的，比较上一个与这个的长度，取较大的
        '''
        if nums==[]:
            return 0
        if len(nums)==1:
            return 1
        max_num=1
        count=1
        for i in range(1,len(nums)):
            if nums[i-1]>nums[i]:
                count+=1
            else:
                max_num=max(count,max_num)
                count+=1
        return max(max_num,count)
